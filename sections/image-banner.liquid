<div class="custom-hero-banner">
  <h1>{{ section.settings.heading }}</h1>
  {% if section.settings.image != blank %}
    <img src="{{ section.settings.image | image_url: width: 1200 }}" alt="{{ section.settings.heading }}">
  {% endif %}
</div>

<style>
.custom-hero-banner {
  text-align: center;
  padding: 60px 20px;
  background: linear-gradient(135deg, #f9f9f9 0%, #eaeaea 100%);
}
.custom-hero-banner h1 {
  font-size: 40px;
  color: #222;
  margin-bottom: 25px;
}
.custom-hero-banner img {
  width: 100%;
  max-width: 1200px;
  border-radius: 12px;
  box-shadow: 0 4px 15px rgba(0,0,0,0.1);
}
</style>

{% schema %}
{
  "name": "Simple Hero Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Banner Title",
      "default": "Welcome to Abodi's Store"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Banner Image"
    }
  ],
  "presets": [
    {
      "name": "Simple Hero Banner"
    }
  ]
}
{% endschema %}
